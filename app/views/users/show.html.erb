<h1><%= @user.username %></h1>

<table id="hor-minimalist-a">
  <tbody>
    <% @user.pastes.each do |paste| %>
      <tr>
        <td><%= link_to paste.name, paste %></td>
        <td><%= link_to paste.language.name, language_path(paste.language.name) %></td>
        <td><%= link_to "Delete Paste", paste, method: :delete %></td>
        <td><%= lines paste.content, paste.language %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Paste', new_paste_path %>